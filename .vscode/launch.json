  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start bot",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "console": "internalConsole",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "program": "${workspaceFolder}/index.ts",
      "args": [
        "bot"
      ]
    },
    {
      "name": "Start bot (watch mode)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "runtimeArgs": [
        "watch"
      ],
      "console": "internalConsole",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "program": "${workspaceFolder}/index.ts",
      "args": [
        "bot"
      ]
    }
  ]
}