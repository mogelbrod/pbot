  "license": "ISC",
  "repository": "git+https://github.com/mogelbrod/pbot.git",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node . bot",
    "lint": "eslint . --fix",
    "lint-staged": "lint-staged",
    "test": "mocha",
    "service-install": "./install-system-service.sh",
    "service-logs": "journalctl --user -u pbot.service",
    "service-restart": "systemctl --user restart pbot",
    "service-start": "systemctl --user start pbot",
    "service-stop": "systemctl --user stop pbot"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "*.js": [
      "prettier -w",
      "eslint . --fix"
    ]
  },
  "dependencies": {
    "airtable": "^0.12.2",
    "backo": "^1.1.0",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.2",
    "query-string": "^9.1.1",
    "slackbots": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "chai": "^5.2.0",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "lint-staged": "^15.5.0",
    "mocha": "^11.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.3"
  }
