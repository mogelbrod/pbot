{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "node16",
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": false,
    "experimentalDecorators": true,
    "lib": [
      "es2023"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}