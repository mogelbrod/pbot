{
  "compilerOptions": {
    "noEmit": true,
    "moduleDetection": "force",
    "module": "Preserve",
    "target": "es2024",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es2024"
    ],
  },
  "include": [
    "*.js",
    "*.ts",
    ".mocharc.cjs",
    "lib",
  ],
  "exclude": [
    "node_modules"
  ]
}